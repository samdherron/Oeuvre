@{
    ViewData["Title"] = "Home Page";
}



    <div class="container">

        <br />
        <br />

        <div class="row" id="discoverLocalArtSection">

            <div class="col-md-12" id="discoverLocalArtColumn">
                <div id="outerContainer">
                    <div class="container-fluid offset-1">
                        <br />
                        <h1 class="text-dark" id="headerDiscover">Discover</h1>
                        <h1 class="text-dark">Local Art</h1>
                        <br />
                        <h3 class="text-left" id="subheaderDiscover">
                            Showcasing the best local <br />
                            galleries and museums
                        </h3>
                        <br />
                        <button class="btn" id="innerImageButton">FIND A GALLERY</button>
                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </div>

        <br />
        <br />

        <div class="row">

            <div class="col-md-12" id="exploreGalleryColumn">
                <div id="innerContainerExplore">
                    <div class="container-fluid ml-auto">
                        <br />
                        <br />
                        <h2 id="exploreText">Explore by gallery</h2>
                        <br />
                        <br />
                    </div>
                </div>
            </div>

        </div>


        <br />
        <br />

        <div class="row">

            <div class="col-md-12" id="exploreExhibitionColumn">
                <div id="innerContainerExplore">
                    <div class="container-fluid ml-auto">
                        <br />
                        <br />
                        <h2 id="exploreText">Explore current exhibitions</h2>
                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </div>

        <br />
        <br />

        <div class="row">

            <div class="col-md-12" id="exploreThemeColumn">
                <div id="innerContainerExplore">
                    <div class="container-fluid ml-auto">
                        <br />
                        <br />
                        <h2 id="exploreText">Explore by themes</h2>
                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </div>


        <br />
        <br />

        <div class="row" id="includeGallerySection">

            <div class="col-md-12" id="includeGalleryColumn">
                <div id="outerContainer">
                    <div class="container-fluid offset-1">
                        <br />
                        <h1 class="text-dark" id="headerDiscover">Include your</h1>
                        <h1 class="text-dark">gallery's work</h1>
                        <br />
                        <h3 class="text-left" id="subheaderDiscover">
                            Gain more visitors
                        </h3>
                        <br />
                        <button class="btn" id="innerImageButton">ADD YOUR GALLERY</button>
                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </div>

        <br />
        <br />

    </div>

@section Styles {
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Mainpage.css" />

}