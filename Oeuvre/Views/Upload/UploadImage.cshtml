@model Oeuvre.Models.Image




@{
    ViewData["Title"] = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Upload Images</h1>


<hr />
<div class="container">
    <form method="post" asp-controller="Upload" asp-action="UploadImageToLocal" enctype="multipart/form-data">
        <div class="row">
            <div class="form-group">
                <div class="col-sm-3">
                    <label for="imageName">Image Name:</label>
                    <br />
                    <input type="text" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-3">
                    <label for="imageDescription">Description:</label>
                    <br />
                    <input type="text" />
                </div>
            </div>

        </div>

        <div class="row">

            <div class="form-group">
                <div class="col-sm-3">
                    <label for="imageThemes">Theme Type:</label>
                    <br />
                    <select>
                        <option>Test</option>
                        <option>Test 2</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-3">
                    <label for="imageThemes">Theme Type:</label>
                    <br />
                    <select>
                        <option>Test</option>
                        <option>Test 2</option>
                    </select>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-lg-8">
                    <label for="imageArtist">Artist Name:</label>
                    <br />
                    <input type="text" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-sm-3">
                    <label id="imageLabel" for="file">Image:</label>
                    <input id="imageUpload" type="file" name="image"
                           accept="image/png, image/jpeg">
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

    <img src="@ViewData["ImageLocation"]" width="700" height="400" />
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#imageUpload").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next("#imageLabel").html(fileName);
        })
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Styles {
    <link rel="stylesheet" href="~/css/UploadImages.css" />
}